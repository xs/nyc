{
  "name": "nyc",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "watch": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --watch",
    "extract": "node scripts/extract.js",
    "sample": "node scripts/sample.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "earcut": "^3.0.2",
    "fast-xml-parser": "^5.2.5",
    "flatbush": "^4.5.0",
    "proj4": "^2.19.10"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "esbuild": "^0.25.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
